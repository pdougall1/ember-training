<div class="album-list">
  {{#each album in content }}
    <div class="album">
      {{#link-to 'album' album}}
        <img {{bind-attr src=album.artwork}}>
      {{/link-to}}
      <p class="album-name">{{album.name}}</p>
      <p class="album-artist">{{album.artist}}</p>
      <p class="song-count">
        8 songs
        {{#if album.isExplicit}}
          <span class='explicit'>EXPLICIT</span>
        {{/if}}
      </p>
    </div>  
  {{/each}}
</div>